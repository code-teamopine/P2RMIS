@model Sra.P2rmis.Web.UI.Models.SecurityPolicyHistoryViewModel
@using Sra.P2rmis.Web.Controllers
@Html.IncludeVersionedFiles("/Scripts/Custom/SecurityPolicyHistory/SecurityPolicyHistory.js")
@Html.Partial("_PolicyManagementHeader")
<!-- Tabs -->
<div class="sec-fieldSet">
    <ul class="nav nav-tabs">
        <li>@Html.ActionLink("Security Policy", "SecurityPolicy", "Security")</li>
        <li class="active">@Html.ActionLink("Security Policy History Log", "SecurityPolicyHistoryLog", "Security")</li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane" id="securityPolicy">
        </div>
        <div class="tab-pane active" id="securityPolicyHistoryLog">
            <div class="row-fluid">
                <div class="span12">
                    <h4 style="display:inline">Security Policy History Log</h4>
                    <img class="upm-profile-section_field_img" src="/Content/img/info_20px_enabled.png" alt="Security policy description"
                         title="The Security Policy Table displays the details of each Security Policy. A security policy is a configurable date and time period during which identified users will be unable to access P2RMIS unless they are on a white-listed network defined in the policy.">
                    <h6 class="pull-right" id="btnExport"><a href="#" class="ss-gridHeader_exportButton__link"><img src="/Content/img/icon_export_excel_labeled.png" /></a></h6>
                    <div>
                        <label class="k-radio-label" for="PolicyId">Policy Name</label>
                        <input id="PolicyId" />
                        <input type="radio" name="SearchType" id="Since" checked="checked">
                        <label class="k-radio-label" for="SinceDays">Number Of Days</label>
                        <input id="SinceDays" />
                        <input type="radio" name="SearchType" id="FromTo">
                        <label class="k-radio-label" for="FromDate">Policy Start Date</label>
                        <input type="text" id="FromDate">
                        <label class="k-radio-label" for="ToDate">Policy End Date</label>
                        <input type="text" id="ToDate">
                        <br />
                        <label class="k-radio-label" for="PolicyStatus">Policy Status</label>
                        <input id="PolicyStatus" />
                        @*.DataTextField("Text")
              .DataValueField("Value")
              .OptionLabel("Select Policy Status")
              .BindTo(new List<SelectListItem>() {
                  new SelectListItem() {
                      Text = "Created",
                      Value = "1"
                  },
                  new SelectListItem() {
                      Text = "Modified",
                      Value = "2"
                  },
                  new SelectListItem() {
                      Text = "Deleted",
                      Value = "3"
                  },
                  new SelectListItem() {
                      Text = "Enabled",
                      Value = "4"
                  },
                  new SelectListItem() {
                      Text = "Disabled",
                      Value = "5"
                  },
                  new SelectListItem() {
                      Text = "Applied",
                      Value = "7"
                  },
                  new SelectListItem() {
                      Text = "Removed",
                      Value = "8"
                  }
              })
        )*@

                    </div>
                    <div class="pull-right margin-top10">
                        <input type="button" id="btnFindSecurityPolicyHistory" class="btn btn-primary" value="Find" />
                        <input type="button" id="btnClearSecurityPolicyHistory" class="btn btn-primary " value="Clear" />
                    </div>
                    <div id="ajxLoader" class="pull-right ajaxLoading">
                        <img src="/Content/img/loading-icon.gif">
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <small class="pull-right"><span id="dataLoadedTimestampSpan">&nbsp;</span></small>
                </div>
            </div>
            <div id="securityPolicyHistoryGrid"></div>
        </div>
    </div>
</div>